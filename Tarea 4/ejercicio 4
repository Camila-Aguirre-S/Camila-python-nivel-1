while True: 
    lista = input("Ingrese una lista de elementos separados por comas: ").split(",") #reconocer lista
    try:
        print("Lista:", lista)
        tupla = tuple(lista)
        print("Tupla:", tupla)
    except:
       print("Ha ocurrido un error. Intente de nuevo.")

    opcion = input("Â¿Desea ingresar otra lista? (si/no)")  # loop

    if opcion.lower() == "no":
        break

# Casos de prueba para ejercicio 4
# Entrada: "1,2,3,4,5,6" 
# Salida esperada: 
#  Lista: [1, 2, 3, 4, 5, 6]
#  Tupla: (1, 2, 3, 4, 5, 6)