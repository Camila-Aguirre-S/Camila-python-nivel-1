from baraja import barajar_cartas
import usuario
from calcularPUNTAJE import calcular_puntaje
from valores import valores

while True:
    print("Opciones:")
    print("1. Nuevo usuario")
    print("2. Nuevo juego")
    print("3. Estadísticas")
    print("4. Salir")
    seleccion = input("Seleccione una opción (1, 2, 3, 4): ")

    if seleccion == '1':
        usuario.opciones[seleccion]()
    elif seleccion == '2' or seleccion == '3':
        nombre_usuario = input("Ingrese el nombre de usuario: ")
        usuario.opciones[seleccion](nombre_usuario)
    elif seleccion == '4':
        break
    else:
        print("Opción inválida. Por favor, seleccione una opción válida.")
        continue

    if seleccion == '2':
        print("Barajando...")
        cartas_jugador = barajar_cartas()
        puntaje = calcular_puntaje(cartas_jugador)
        print("Puntaje del jugador:", puntaje)


def calcular_puntaje(cartas_jugador):
    puntaje = 0
    for carta in cartas_jugador:
        valor = valores[carta[:-1]]  # Obtener el valor de la carta del diccionario de valores
        puntaje += valor
    return puntaje




 
