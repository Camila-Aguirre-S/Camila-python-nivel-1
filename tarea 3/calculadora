#while True:
operacion = input("Inserte una operación ('resta' o 'multiplicar'o 'dividir' o 'suma' o 'factorial' o 'potencial'): ")
                   #o escriba 'salir' para finalizar el programa: ")
#if operacion == "salir":
# Comprobar la operación solicitada y realizar la suma o la resta
 if operacion == "resta":
    numero1 = int(input("Ingresa el primer número: "))
    numero2 = int(input("Ingresa el segundo número: "))
    resultado = numero1 - numero2
    print("El resultado es:", resultado)

 elif operacion == "suma":
    operacion = input("Ingrese una operación de suma separada por '+' (por ejemplo, '3+4+5'): ")
    numeros = operacion.split('+')
    suma = 0
    for numero in numeros:
      suma += int(numero)
    print("Resultado de la suma :", suma)

 elif operacion == "multiplicar":
    operacion = input("Ingrese una operación de multiplicación separada por '*' (por ejemplo, '3*4*5'): ")
    numeros = operacion.split('*')
    resultado = 1
    for numero in numeros:
        resultado *= int(numero)
    print("Resultado de la multiplicación:", resultado)

 elif operacion == "dividir":
    numero1 = int(input("Ingresa el primer número: "))
    numero2 = int(input("Ingresa el segundo número: "))
    resultado = numero1 / numero2
    print("El resultado es:", resultado)

 elif operacion == "factorial":
    num = int(input("Ingrese un número: ")) 
    factorial = 1

    if num < 0:
        print("Error: el número debe ser positivo")
    elif num == 0 or num == 1:
        print("Factorial de",num,"es 1")
    else:
        for i in range(2,num+1):
            factorial *= i
        print("El factorial de",num,"es",factorial)

elif operacion == "potencial":
    base = int(input("Ingrese la base: "))
    exponente = int(input("Ingrese el exponente: "))
    resultado = base ** exponente
    print("El resultado es:", resultado)
